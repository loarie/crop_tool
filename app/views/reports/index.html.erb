<p id="notice"><%= notice %></p>

<h1>Crop Tool</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Crop</th>
      <th>Statistic</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= form_tag("/reports", method: "get") do %>
    <%= select_tag(:crop, options_for_select([['Maize'], ['Millet']])) %>
    <%= select_tag(:statistic, options_for_select([['Yield'], ['Planting'], ['Harvest']])) %>
    <%= submit_tag("Search") %>
  <% end %>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.value %></td>
        <td><%= report.crop %></td>
        <td><%= report.statistic %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

Estimate: <%= (@mean * 1000).round %> +/- <%= (@sd * 1000).round %> kg/ha

<br>

<%= link_to 'New Report', new_report_path %>
