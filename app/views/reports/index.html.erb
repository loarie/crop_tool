<p id="notice"><%= notice %></p>

<h1>Crop Tool</h1>

<table>
  <thead>
    <tr>
      <th>Identity</th>
      <th>Destination</th>
      <th>Country</th>
      <th>City</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Crop</th>
      <th>Statistic</th>
      <th>Value</th>
      <th>Temp</th>
      <th>Prec</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= form_tag("/reports", method: "get") do %>
    <%= select_tag(:crop, options_for_select([['Maize'], ['Millet']])) %>
    <%= select_tag(:statistic, options_for_select([['Yield'], ['Planting'], ['Harvest']])) %>
    <%= submit_tag("Search") %>
  <% end %>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.identity %></td>
        <td><%= report.destination %></td>
        <td><%= report.country %></td>
        <td><%= report.city %></td>
        <td><%= report.lat.round(2) %></td>
        <td><%= report.lon.round(2) %></td>
        <td><%= report.crop %></td>
        <td><%= report.statistic %></td>
        <td><%= report.value.round(2) %></td>
        <td><%= report.temp.round(2) %></td>
        <td><%= report.prec.round(2) %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

Estimate: <%= @estimate =%>

<br>

<%= link_to 'New Report', new_report_path %>
